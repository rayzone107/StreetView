<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.osahub.rachit.streetview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="AA_DB_NAME"
            android:value="WorldTour" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".modules.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.home.LocationsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.AppThemeLocation">
        </activity>
        <activity
            android:name=".modules.streetview.StreetViewActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modules.home.LocationsActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDknW1CpDxTEn5VwEAt1fbic2OjYRKMzlw" />

        <activity
            android:name=".modules.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:launchMode="singleTask"
            android:parentActivityName=".modules.streetview.StreetViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.osahub.rachit.streetview.modules.streetview.StreetViewActivity" />
        </activity>
        <activity
            android:name=".modules.gallery.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:launchMode="singleTask"
            android:parentActivityName=".modules.detail.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.osahub.rachit.streetview.modules.detail.DetailActivity" />
        </activity>
        <activity
            android:name=".modules.category.CategoryActivity"
            android:label="@string/title_activity_category"
            android:launchMode="singleTask"
            android:parentActivityName=".modules.home.LocationsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.osahub.rachit.streetview.modules.home.LocationsActivity" />
        </activity>
        <activity
            android:name=".modules.developerprofile.DeveloperProfileActivity"
            android:label="@string/title_activity_developer_profile"
            android:launchMode="singleTask"
            android:parentActivityName=".modules.home.LocationsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modules.home.LocationsActivity" />
        </activity>

        <provider
            android:name=".database.old.DataProvider"
            android:authorities="@string/content_authority" />

        <service
            android:name=".service.FetchDataIntentService"
            android:exported="false">
        </service>

        <activity
            android:name=".modules.category.SingleCategoryActivity"
            android:label="@string/title_activity_single_category"
            android:parentActivityName=".modules.home.LocationsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.osahub.rachit.streetview.modules.home.LocationsActivity" />
        </activity>
    </application>

</manifest>